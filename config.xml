<?xml version='1.0' encoding='utf-8'?>
<widget id="com.massinflux.getunstuck" version="1.2.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://cordova.apache.org/ns/1.0 ">
  <name>// get unstuck</name>
  <description>Get Unstuck</description>
  <author email="admin@massinflux.com" href="https://massinflux.com">Massinflux</author>
  <content src="index.html"/>
  <access allows-arbitrary-loads-for-media="true" allows-arbitrary-loads-in-web-content="true" allows-local-networking="true" origin="*"/>
  <allow-navigation href="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <icon density="ldpi" src="res/icon/android/mipmap-ldpi/launcher.png"/>
    <icon density="mdpi" src="res/icon/android/mipmap-mdpi/launcher.png"/>
    <icon density="hdpi" src="res/icon/android/mipmap-hdpi/launcher.png"/>
    <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/launcher.png"/>
    <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/launcher.png"/>
    <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/launcher.png"/>

    <splash src="res/screen/android/drawable-hdpi/screen.png" density="land-hdpi"/>
    <splash src="res/screen/android/drawable-ldpi/screen.png" density="land-ldpi"/>
    <splash src="res/screen/android/drawable-mdpi/screen.png" density="land-mdpi"/>
    <splash src="res/screen/android/drawable-xhdpi/screen.png" density="land-xhdpi"/>

    <splash src="res/screen/android/drawable-hdpi/screen.png" density="port-hdpi"/>
    <splash src="res/screen/android/drawable-ldpi/screen.png" density="port-ldpi"/>
    <splash src="res/screen/android/drawable-mdpi/screen.png" density="port-mdpi"/>
    <splash src="res/screen/android/drawable-xhdpi/screen.png" density="port-xhdpi"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
    <preference name="BackupWebStorage" value="none"/>
    <preference name="Orientation" value="all"/>

    <!-- iOS 8.0+ -->
    <!-- iPhone 6 Plus  -->
    <icon src="res/icon/ios/icon-60x60@3x.png" width="180" height="180" />
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="res/icon/ios/icon-60x60@1x.png" width="60" height="60" />
    <icon src="res/icon/ios/icon-60x60@2x.png" width="120" height="120" />
    <!-- iPad -->
    <icon src="res/icon/ios/icon-76x76@1x.png" width="76" height="76" />
    <icon src="res/icon/ios/icon-76x76@2x.png" width="152" height="152" />
    <!-- Spotlight Icon -->
    <icon src="res/icon/ios/icon-40x40@1x.png" width="40" height="40" />
    <icon src="res/icon/ios/icon-40x40@2x.png" width="80" height="80" />
    <!-- iOS 6.1 -->
    <!-- iPhone / iPod Touch -->
    <icon src="res/icon/ios/icon-57x57@1x.png" width="57" height="57" />
    <icon src="res/icon/ios/icon-57x57@2x.png" width="114" height="114" />
    <!-- iPad -->
    <icon src="res/icon/ios/icon-72x72@1x.png" width="72" height="72" />
    <icon src="res/icon/ios/icon-72x72@2x.png" width="144" height="144" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="res/icon/ios/icon-29x29@1x.png" width="29" height="29" />
    <icon src="res/icon/ios/icon-29x29@2x.png" width="58" height="58" />
    <icon src="res/icon/ios/icon-29x29@3x.png" width="87" height="87" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="res/icon/ios/icon-50x50@1x.png" width="50" height="50" />
    <icon src="res/icon/ios/icon-50x50@2x.png" width="100" height="100" />
    <!-- iPad Pro -->
    <icon src="res/icon/ios/icon-83.5x83.5@2x.png" width="167" height="167" />

    <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
  </platform>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="StatusBarStyle" value="default"/>
  <preference name="FadeSplashScreenDuration" value="300"/>
  <preference name="phonegap-version" value="cli-9.0.0"/>
  <preference name="SplashScreen" value="screen"/>
  <preference name="AutoHideSplashScreen" value="true"/>
  <preference name="SplashScreenDelay" value="3000"/>
  <preference name="SplashMaintainAspectRatio" value="true"/>
  <preference name="FadeSplashScreenDuration" value="300"/>
  <preference name="android-minSdkVersion" value="28"/>
  <feature name="SplashScreen">
    <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen"/>
    <param name="onload" value="true"/>
  </feature>
  <plugin name="cordova-plugin-whitelist" spec="^1.3.4"/>
  <plugin name="cordova-plugin-splashscreen" spec="^5.0.3"/>
  <plugin name="cordova-plugin-device" spec="^2.0.3"/>
  <engine name="android" spec="^7.0.0"/>
</widget>
